<Window x:Class="RotationBug.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="DisplayText" HorizontalAlignment="Center" VerticalAlignment="Center">I'm happy.</TextBlock>
        <Button Grid.Row="1" Height="22" Width="80" Margin="0,0,0,20" Click="OnButtonPress">Depress Me</Button>
    </Grid>
</Window>
